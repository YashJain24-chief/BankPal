<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activities.Home">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bank_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/bank_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/averia_serif_libre_light"
        android:text="@string/banking_system_app"
        android:textColor="#415FFC"
        android:textSize="@dimen/_34ssp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/customerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:onClick="showAllUsers"
        android:src="@drawable/customers" />

    <ImageView
        android:id="@+id/TransactionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showAllTransactions"
        android:src="@drawable/transaction" />

</LinearLayout>